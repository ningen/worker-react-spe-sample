{
  "name": "worker-react-spe-sample",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "vite build --config config/vite.config.ts",
    "preview": "$npm_execpath run build && vite preview --config config/vite.config.ts",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate --config config/drizzle.config.ts",
    "db:migrate": "wrangler d1 migrations apply todo-app-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply todo-app-db"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251229.0",
    "@conform-to/react": "^1.15.1",
    "@conform-to/zod": "^1.15.1",
    "@hono/zod-validator": "^0.7.6",
    "@tanstack/react-router": "^1.144.0",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "neverthrow": "^8.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "drizzle-kit": "^0.31.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.5.2",
    "wrangler": "^4.17.0"
  }
}
