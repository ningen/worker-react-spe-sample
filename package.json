{
  "name": "worker-react-spe-sample",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply todo-app-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply todo-app-db"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251229.0",
    "@conform-to/react": "^1.15.1",
    "@conform-to/zod": "^1.15.1",
    "@hono/zod-validator": "^0.7.6",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "jose": "^6.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.8",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.5.2",
    "wrangler": "^4.17.0"
  }
}
